<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vkv.learnmaths"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vkv.learnmaths.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vkv.learnmaths.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.vkv.learnmaths.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vkv.learnmaths.MainActivity" />
        </activity>
        <activity
            android:name="com.vkv.learnmaths.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.vkv.learnmaths.QuestActivity"
            android:label="@string/title_activity_quest" >
        </activity>
        <activity
            android:name="com.vkv.learnmaths.AdminActivity"
            android:label="@string/title_activity_admin" >
        </activity>
        <activity
            android:name="com.vkv.learnmaths.AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName="com.vkv.learnmaths.AdminActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vkv.learnmaths.AdminActivity" />
        </activity>
        <activity
            android:name="com.vkv.learnmaths.EditActivity"
            android:label="@string/title_activity_edit"
            android:parentActivityName="com.vkv.learnmaths.AdminActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vkv.learnmaths.AdminActivity" />
        </activity>
    </application>

</manifest>
